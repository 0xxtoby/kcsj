<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>hellservle</servlet-name>
        <servlet-class>controller.ControllerLogin</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>hellservle</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>adminreg</servlet-name>
        <servlet-class>controller.ControllerRegister</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>adminreg</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cate</servlet-name>
        <servlet-class>controller.ControllerCategory</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>cate</servlet-name>
        <url-pattern>/admin/faq</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>controller.ContrillerPost</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/admin/blog</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>post_com</servlet-name>
        <servlet-class>controller.ContrillerPostCompose</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>post_com</servlet-name>
        <url-pattern>/admin/blog_compose</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>post_updata</servlet-name>
        <servlet-class>controller.ContrillerPostUpdata</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>post_updata</servlet-name>
        <url-pattern>/admin/blog_updata</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>controller.ControllerIndex</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>controller.ControllerRead</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>article</servlet-name>
        <servlet-class>controller.ControllerArticle</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reply</servlet-name>
        <servlet-class>controller.ControllerReply</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>reply</servlet-name>
        <url-pattern>/reply</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>controller.ControllerAdmin</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

















</web-app>


